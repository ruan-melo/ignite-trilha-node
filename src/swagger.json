{
    "openapi": "3.0.0",
    "info": {
        "title": "RentalX API",
        "version": "1.0.0",
        "description": "This is an API for the RentalX application.",
        "contact": {
            "email": "ruantmelo@gmail.com"
        }
    },
    "paths": {
        "/categories": {
            "post": {
                "tags": [
                    "Category"
                ],
                	
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Category 1"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "This is a category"
                                    }
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Category created"
                        
                    },
                    "400": {
                        "description": "Invalid category object"
                    },
                    "500": {
                        "description": "Category already exists"
                    }
                }
            },
            "get": {
                "summary": "List all categories",
                "description": "List all categories",
                "operationId": "listCategories",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string"
                                                
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            },
                                            "createdAt": {
                                                "type": 	
                                                "format": "date-time"
                                            },
                                            "updatedAt": {
                                                "type": "string",
                                                "format": "date-time"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                        }
                    }
                }
            }
        }

    }
